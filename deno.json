{
  "lint": {
    "include": [
      "deno.json",
      "src/",
      "cli/"
    ],
    "rules": {
      "tags": [
        "recommended"
      ],
      "exclude": [
        "ban-unused-ignore"
      ]
    }
  },
  "fmt": {
    "include": [
      "deno.json",
      "src/",
      "cli/",
      "build.ts"
    ],
    "useTabs": false,
    "lineWidth": 80,
    "indentWidth": 2,
    "singleQuote": true
  },
  "unstable": ["detect-cjs"],
  "imports": {
    "@alicloud/openapi-client": "npm:@alicloud/openapi-client@^0.4.15",
    "@alicloud/sls20201230": "npm:@alicloud/sls20201230@^5.9.0",
    "@alicloud/tea-typescript": "npm:@alicloud/tea-typescript@^1.8.0",
    "@alicloud/tea-util": "npm:@alicloud/tea-util@^1.4.10",
    "@std/assert": "jsr:@std/assert@1",
    "@std/async": "jsr:@std/async@^1.0.7",
    "lz4": "./src/shims/lz4.ts",
    "npm:lz4": "./src/shims/lz4.ts",
    "npm:lz4@0.6.5": "./src/shims/lz4.ts",
    "zod": "npm:zod@^3.23.8"
  },
  "nodeModulesDir": "auto"
}
