{
  "lint": {
    "include": [
      "deploy.json",
      "src/",
      "cli/"
    ],
    "rules": {
      "tags": [
        "recommended"
      ],
      "exclude": [
        "ban-unused-ignore"
      ]
    }
  },
  "fmt": {
    "include": [
      "deploy.json",
      "src/",
      "cli/",
      "build.ts"
    ],
    "useTabs": false,
    "lineWidth": 80,
    "indentWidth": 2,
    "singleQuote": true
  },
  "imports": {
    "@alicloud/sls20201230": "npm:@alicloud/sls20201230@^5.4.1",
    "@std/assert": "jsr:@std/assert@1"
  },
  "nodeModulesDir": "auto"
}
