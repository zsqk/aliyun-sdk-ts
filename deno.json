{
  "lint": {
    "include": [
      "deploy.json",
      "src/",
      "cli/"
    ],
    "rules": {
      "tags": [
        "recommended"
      ],
      "exclude": [
        "ban-unused-ignore"
      ]
    }
  },
  "fmt": {
    "include": [
      "deploy.json",
      "src/",
      "cli/",
      "build.ts"
    ],
    "useTabs": false,
    "lineWidth": 80,
    "indentWidth": 2,
    "singleQuote": true
  },
  "imports": {
    "@std/assert": "jsr:@std/assert@1",
    "aliyun-sdk": "npm:aliyun-sdk@^1.12.10"
  },
  "nodeModulesDir": "auto"
}
